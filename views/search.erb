<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Likes</th>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><a href="<%= "/spy/#{result['id']}" %>"><%= result["name"] %></a></td>
        <td><%= result["category"] %></td>
        <td><%= result["likes"] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
